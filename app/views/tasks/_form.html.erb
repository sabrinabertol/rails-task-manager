<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'task title' %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details, placeholder: 'task description' %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
